/* subpackages/shop/order/order.wxss */
page{background-color: #F5F5F5;font-family:'pangmenzhengdao';}
.label{background-color: #fff;box-shadow: 0 0 10rpx 0 #ddd;position: relative;z-index: 5;}
.label .item{flex: 1;padding:20rpx 0;text-align: center;}
swiper,scroll-view{width:100%;height: 100%;}
.label .item .text{position: relative;padding-bottom: 10rpx;display: inline-block;}
.label .item .text .after{display: block;width:0;height: 6rpx;border-radius: 6rpx;background-color: #165D4C;position: absolute;left:50%;top: 100%;transition: all .3s;}
.label .item .text .after.on{width: 100%;left:0;}
.ordere-list .li{background: #fff;border-radius: 14rpx;margin-top: 30rpx;}
.ordere-list .li:not(:last-child){margin-bottom: 30rpx;}
.ordere-list .li .goods{padding-top:22rpx;}
.ordere-list .li .goods,.ordere-list .li .subtotal,.ordere-list .li .btns{padding-left:22rpx;padding-right:22rpx;}
.ordere-list .li .item:not(:last-child){margin-bottom: 30rpx;}
.ordere-list .li .img{width:160rpx;height: 160rpx;margin-right: 30rpx;}
.ordere-list .li image{width:100%;height: 100%;border-radius: 14rpx;}
.ordere-list .li .h3{font-size: 28rpx;color:#222;line-height: 40rpx;}
.ordere-list .li .h4{font-size: 20rpx;color:#999;background: #ededed;border-radius: 6rpx;line-height: 40rpx;height: 40rpx;margin-top: 10rpx;display: inline-block;padding:0 12rpx;}
.ordere-list .li .h5{font-size: 24rpx;color:#999;margin-top: 12rpx;}
.ordere-list .li .p{font-size: 30rpx;color:#999;text-align: right;}
.subtotal{text-align: right;font-size: 30rpx;color:#666;padding:20rpx 0;}
.subtotal .h6{padding-right: 40rpx;}
.subtotal text .prize-total{color:#F0452D;}
.btns{padding:30rpx 0 40rpx;text-align: right;justify-content: flex-end;border-top: 1px solid #eee;}
.btns button{font-size: 30rpx;color: #999;width:170rpx;border:1px solid #707070;border-radius: 60rpx;height: 60rpx;}
.btns button:not(:last-child){margin-right: 40rpx;}
button.dark{background: #165D4C;border-color: #165D4C;color: #fff;}
.btns .span{font-size: 30rpx;color:#165D4C;}